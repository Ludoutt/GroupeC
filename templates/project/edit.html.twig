{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/projects_asset/stylesheets/project.css') }}">
{% endblock %}
{% block body %}
    <section id="wrapper">
        <nav>
            <div class="projects">
                <h2><a href="{{ path('project_index') }}"><   Home</a></h2>
                <h1>Liste des projets</h1>
                <ul class="project-list">
                    {% for project in projects %}
                        <li><a href="{{ path('backlog', {'project': project.id}) }}">{{ project.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </nav>
    </section>
    <h1>Edit Project</h1>

    {{ include('project/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('project_index') }}">back to list</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
