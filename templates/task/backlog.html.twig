<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Backlog{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
            <h1>Backlog du projet {{ project.title }}</h1>
            <a href="{{ path('project_index') }}">Retour à la liste des projets</a>
            <a href="{{ path('backlog_new', {'project' : project.id}) }}">Ajouter une tâche</a>
            {% if tasks is not empty %}
                <div>
                    <h3>Liste des éléments du backlog</h3>
                    {% for task in tasks %}
                        <div>
                            {{ task.title }}
                        </div>
                        <a href="{{ path('add-to-sprint', {'project' : project.id, 'task' : task.id}) }}">Assigner la tache à un sprint</a>
                    {% endfor %}
                </div>
            {% else %}
                <div>
                    Aucun élément dans le backlog pour le moment
                </div>
            {% endif %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
