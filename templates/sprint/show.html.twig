{% extends 'base.html.twig' %}

{% block title %}Sprint{% endblock %}

{% block body %}
    <h1>Sprint</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sprint.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ sprint.title }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ sprint.resume }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ sprint.dateStart ? sprint.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ sprint.dateEnd ? sprint.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sprint_index', {'id' : sprint.project.id}) }}">back to list</a>

    <a href="{{ path('sprint_edit', {'id': sprint.id}) }}">edit</a>

    {{ include('sprint/_delete_form.html.twig') }}
{% endblock %}
